<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombrerestaurante"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="RESTAURANTE TIPICO"
        android:textSize="24dp"
        android:textColor="@color/teal_700"
        android:layout_marginHorizontal="15dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/imagenrestaurante1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/nombrerestaurante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/restaurantes1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/platorestaurante1"
        app:layout_constraintVertical_bias="0.15"
       app:layout_constraintTop_toBottomOf="@id/imagenrestaurante1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Bandeja Tipica"
        android:textSize="24dp"
        android:textColor="@color/teal_700"
        android:layout_marginHorizontal="15dp"
        android:textAlignment="center"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preciorestaurante1"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintTop_toBottomOf="@id/platorestaurante1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Desde 25.000$"
        android:textSize="24dp"
        android:textColor="@color/teal_700"
        android:layout_marginHorizontal="15dp"
        android:textAlignment="center"/>

</android.support.constraint.ConstraintLayout>